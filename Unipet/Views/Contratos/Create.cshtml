@model Unipet.Models.Contrato
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
            <div class="app-card alert alert-dismissible shadow-sm mb-4" role="alert">
                <div class="inner">
                    <div class="app-card-body p-3 p-lg-4">
                        <a asp-action="Index" style="padding-left: 20px; float: right"> <i class="fas fa-reply"></i> Voltar</a>
                        <h4 class="mb-3">Adicionar contrato</h4>
                        <div class="row gx-5 gy-3">
                            <div class="col-lg-12 mt-3">
                                <form asp-action="Create">
                                    <div class="row">
                                        <div class="col-md-6 col-xs-12 mb-3">
                                            <div class="form-group">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <div class="form-group">
                                                    <label asp-for="DataInicio" class="control-label"></label>
                                                    <input asp-for="DataInicio" class="form-control" />
                                                    <span asp-validation-for="DataInicio" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-6 col-xs-12 mb-3">
                                            <div class="form-group">
                                                <label asp-for="DataTermino" class="control-label"></label>
                                                <input asp-for="DataTermino" class="form-control" />
                                                <span asp-validation-for="DataTermino" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-6 col-xs-12 mb-3">
                                            <div class="form-group">
                                                <label asp-for="ValorCombinado" class="control-label"></label>
                                                <input asp-for="ValorCombinado" class="form-control" />
                                                <span asp-validation-for="ValorCombinado" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-6 col-xs-12 mb-3">
                                            <div class="form-group">
                                                <label asp-for="IdPlano" class="control-label">Plano</label>
                                                <select asp-for="IdPlano" class="form-control" asp-items="ViewBag.IdPlano"></select>
                                            </div>
                                        </div>
                                    </div>

                                    <!--next-->
                                    <div class="row">
                                        <div class="col-md-12 col-xs-12">
                                            <div class="form-group">
                                                <label asp-for="IdTutor" class="control-label">Tutor</label>
                                                <select asp-for="IdTutor" class="form-control" asp-items="ViewBag.IdTutor"></select>
                                            </div>
                                        </div>

                                        <div class="col-md-6 col-xs-12 mb-3 mt-3">
                                            <div class="form-group">
                                                <label asp-for="IdPet" class="control-label">Pet</label>
                                                <select asp-for="IdPet" class="form-control" asp-items="ViewBag.IdPet"></select>
                                            </div>
                                        </div>

                                        <div class="col-md-6 col-xs-12 mb-5 mt-3">
                                            <div class="form-group">
                                                <label asp-for="IdEmpresa" class="control-label">Empresa</label>
                                                <select asp-for="IdEmpresa" class="form-control" asp-items="ViewBag.IdEmpresa"></select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <div class="form-group">
                                            <input type="submit" value="Adicionar contrato" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
