@model Unipet.Models.Contrato

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
            <div class="app-card alert alert-dismissible shadow-sm mb-4" role="alert">
                <div class="inner">
                    <div class="app-card-body p-3 p-lg-4">
                        <a asp-action="Index" style="padding-left: 20px; float: right"> <i class="fas fa-reply"></i> Voltar</a>
                        <h4 class="mb-3">Detalhes do contrato</h4>
                        <div class="row gx-5 gy-3">
                            <div class="col-12 col-lg-12">
                                <div class="col-md-12">
                                    <dl class="row mt-3 mb-5">
                                        <dt class="col-sm-2">
                                            <label asp-for="IdContrato" class="control-label">Data de Início</label>
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.DataInicio)
                                        </dd>
                                        <dt class="col-sm-2">
                                            <label asp-for="IdContrato" class="control-label">Data de Término</label>
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.DataTermino)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.ValorCombinado)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.ValorCombinado)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Plano)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Plano.NomePlano)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Tutor)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Tutor.NomeTutor)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Pet)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Pet.NomePet)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Empresa)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Empresa.RazaoSocial)
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>