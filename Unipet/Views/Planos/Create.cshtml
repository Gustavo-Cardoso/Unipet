@model Unipet.Models.Plano

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
            <div class="app-card alert alert-dismissible shadow-sm mb-4" role="alert">
                <div class="inner">
                    <div class="app-card-body p-3 p-lg-4">
                        <a asp-action="Index" style="padding-left: 20px; float: right"> <i class="fas fa-reply"></i> Voltar</a>
                        <h4 class="mb-3">Adicionar plano</h4>
                        <div class="row gx-5 gy-3">
                            <div class="col-lg-12 mt-3">
                                <form asp-action="Create">
                                    <div class="row">
                                        <div class="col-md-6 col-xs-12 mb-3">
                                            <div class="form-group">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <div class="form-group">
                                                    <label asp-for="NomePlano" class="control-label"></label>
                                                    <input asp-for="NomePlano" class="form-control" />
                                                    <span asp-validation-for="NomePlano" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-6 col-xs-12 mb-3">
                                            <div class="form-group">
                                                <label asp-for="Valor" class="control-label"></label>
                                                <input asp-for="Valor" class="form-control" />
                                                <span asp-validation-for="Valor" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-12 col-xs-12 mb-3">
                                            <div class="form-group">
                                                <label asp-for="Descricao" class="control-label"></label>
                                                <textarea asp-for="Descricao" class="form-control" style="height: 250px"></textarea>
                                                <span asp-validation-for="Descricao" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <!--next-->
                                    <div class="row">
                                        <div class="col-md-6 col-xs-12 mb-3 mt-3">
                                            <div class="form-group">
                                                <label asp-for="IdArea" class="control-label"></label>
                                                <select asp-for="IdArea" class="form-control" asp-items="ViewBag.IdArea"></select>
                                            </div>
                                        </div>

                                        <div class="col-md-6 col-xs-12 mb-3 mt-3">
                                            <div class="form-group">
                                                <label asp-for="IdEmpresa" class="control-label"></label>
                                                <select asp-for="IdEmpresa" class="form-control" asp-items="ViewBag.IdEmpresa"></select>
                                            </div>
                                        </div>
                                    </div>

                                    <!--Ativo?-->
                                    <div class="row">
                                        <div class="col-md-6 col-xs-12 mt-4 mb-5">
                                            <div class="form-group form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" asp-for="ExibirHome" /> @Html.DisplayNameFor(model => model.ExibirHome)
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <div class="form-group">
                                            <input type="submit" value="Adicionar plano" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
