
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
            <!--card Boas Vindas-->
            <div class="app-card alert alert-dismissible shadow-sm mb-4 border-left-decoration" role="alert">
                <div class="inner">
                    <div class="app-card-body p-3 p-lg-4">
                        <h3 class="mb-3">Contatos</h3>
                        <div class="row gx-5 gy-3">
                            <form class="mb-3" data-ajax="true" data-ajax-method="get" data-ajax-update="#Grid"
                                  data-ajax-mode="replace" data-ajax-url="@Url.Action("GetGrid", "Contatos")">
                                <div class="form-row">
                                    <div class="input-group col-6">
                                        <input name="searchString" type="text" class="form-control" placeholder="Digite um nome ou assunto" arial-label=""
                                               arial-describedby="basic-addon1" value="@ViewData["CurrentFilter"]" />
                                        <div class="input-group-append">
                                            <button class="btn btn-light" type="submit" style="margin-left: 10px">Pesquisar</button>
                                        </div>
                                    </div>
                                </div>
                            </form>

                            <div id="Grid">
                                <partial name="_Grid" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}