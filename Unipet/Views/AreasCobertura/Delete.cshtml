@model Unipet.Models.AreaCobertura

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
            <div class="app-card alert alert-dismissible shadow-sm mb-4" role="alert">
                <div class="inner">
                    <div class="app-card-body p-3 p-lg-4">
                        <a asp-action="Index" style="padding-left: 20px; float: right"> <i class="fas fa-reply"></i> Voltar</a>

                        <div class="row gx-5 gy-3">
                            <div class="col-12 col-lg-12">
                                <div class="col-md-12">
                                    <h4>Deseja deletar esse registro?</h4>

                                    <dl class="row mt-5 mb-5">
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.NomeArea)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.NomeArea)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Municipio)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Municipio.NomeMunicipio)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Empresa)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Empresa.Email)
                                        </dd>
                                        <dt class="col-sm-1 mt-3">
                                            @Html.DisplayNameFor(model => model.ExibirHome)
                                        </dt>
                                        <dd class="col-sm-10 mt-3">
                                            @Html.DisplayFor(model => model.ExibirHome)
                                        </dd>
                                    </dl>

                                    <form asp-action="Delete">
                                        <input type="hidden" asp-for="IdArea" />
                                        <input type="submit" value="Deletar" class="btn btn-danger" />
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>